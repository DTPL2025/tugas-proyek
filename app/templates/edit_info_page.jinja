{% extends "base.jinja" %}

{% block title %}Edit FAQ{% endblock %}

{% block body %}
<div class="bg-white p-8 max-w-2xl mx-auto mt-16 rounded shadow">
    <h2 class="text-2xl font-bold mb-6 text-center">Edit Konten FAQ</h2>
    
    <form method="POST">
        {{ form.hidden_tag() }}

        <div class="mb-4">
            {{ form.category.label(class="block text-sm font-semibold text-gray-700") }}
            {{ form.category(class="w-full p-2 border border-gray-300 rounded") }}
        </div>

        <div class="mb-4">
            {{ form.content.label(class="block text-sm font-semibold text-gray-700") }}
            {{ form.content(class="w-full p-3 border border-gray-300 rounded h-40") }}
        </div>

        <div class="flex justify-between">
            <a href="{{ url_for('detail_product', product_id=info.product_id) }}" class="text-sm text-gray-600 underline">Kembali</a>
            <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600">
                Simpan Perubahan
            </button>
        </div>
    </form>
</div>
{% endblock %}
