<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Judul Halaman{% endblock %}</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100 flex flex-col items-center">
    {% block navbar %}
    <nav class="bg-white shadow-md w-full fixed top-0">
        <div class="container mx-auto px-4 py-2 flex justify-between items-center">
            <a href="{{ url_for('home') }}" class="text-xl font-bold">Ecommerce Manud Jaya</a>
            <div class="space-x-4">
                <a href="{{ url_for('home') }}" class="text-gray-700 hover:text-gray-900">Home</a>
                {% if role == 'Penjual' %}
                    <a href="{{ url_for('view_product_seller') }}" class="text-gray-700 hover:text-gray-900">Etalase</a>
                {% endif %}
                <a href="{{ url_for('view_product_buyer') }}" class="text-gray-700 hover:text-gray-900">Product</a>
                <a href="/" class="text-gray-700 hover:text-gray-900">Event</a>
                {% if username %}
                    <span class="text-gray-700">Selamat datang, {{ username }}!</span>
                    <a href="{{ url_for('logout') }}" class="text-gray-700 hover:text-gray-900">Logout</a>
                {% else %}
                    <a href="{{ url_for('register') }}" class="text-gray-700 hover:text-gray-900">Daftar</a>
                    <a href="{{ url_for('login') }}" class="text-gray-700 hover:text-gray-900">Login</a>
                {% endif %}
            </div>
        </div>
    </nav>
    {% endblock %}
    <div class="container flex flex-col items-center justify-center h-screen mt-16">
        {% with messages = get_flashed_messages(with_categories=true) %}
            {% if messages %}
                {% for category, message in messages %}
                    <div class="alert alert-{{ category }}">{{ message }}</div>
                {% endfor %}
            {% endif %}
        {% endwith %}
        {% block body %}
        {% block content %}{% endblock %}
        {% endblock %}
    </div>
    {% block footer %}
    <footer class="bg-white shadow-md w-full py-4 mt-4">
        <div class="container mx-auto text-center text-gray-700">
            &copy; 2023 Ecommerce Manud Jaya. All rights reserved.
        </div>
    </footer>
    {% endblock %}
</body>
</html>