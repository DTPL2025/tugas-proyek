<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Judul Halaman{% endblock %}</title>
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    <script src="//unpkg.com/alpinejs" defer></script>
</head>
<body class="bg-[#363932] flex flex-col items-center bg-[url('/static/images/bg_nonberanda.jpg')] bg-cover bg-no-repeat bg-fixed bg-center">
    <nav class="bg-[#41453C] shadow-md w-full fixed top-0 z-50">
        <div class="container mx-auto px-4 py-2 flex justify-between items-center">
            <a href="{{ url_for('home') }}" class="text-white font-bold">E-Manja</a>
            <div class="space-x-4">
                <a href="{{ url_for('home') }}" class="text-gray-200 hover:text-gray-400">Beranda</a>
                {% if current_user.role == 'Penjual' %}
                    <a href="{{ url_for('etalase_product') }}" class="text-gray-200 hover:text-gray-400">Etalase</a>
                {% endif %}
                <a href="{{ url_for('katalog_product') }}" class="text-gray-200 hover:text-gray-400">Katalog</a>
                <a href="/" class="text-gray-200 hover:text-gray-400">Acara</a>
                {% if current_user.is_authenticated %}
                    <span class="text-gray-200">Selamat datang, {{ current_user.username }}!</span>
                    <a href="{{ url_for('reset_password') }}" class="text-gray-200 hover:text-gray-400">Reset Password</a>
                    <a href="{{ url_for('logout') }}" class="text-gray-200 hover:text-gray-400">Logout</a>
                {% else %}
                    <a href="{{ url_for('register') }}" class="text-gray-200 hover:text-gray-400">Daftar</a>
                    <a href="{{ url_for('login') }}" class="text-gray-200 hover:text-gray-400">Login</a>
                {% endif %}
            </div>
        </div>
    </nav>

    <div class="container flex flex-col items-center justify-center min-h-screen mt-16">
        {% with messages = get_flashed_messages(with_categories=true) %}
            {% if messages %}
                <div class="fixed bottom-5 right-5 transform z-50">
                    {% for category, message in messages %}
                        <div x-data="{ show: true }" x-init="setTimeout(() => show = false, 3000)" x-show="show"
                            x-transition:enter="ease-out duration-500"
                            x-transition:enter-start="opacity-0 scale-90"
                            x-transition:enter-end="opacity-100 scale-100"
                            x-transition:leave="ease-in duration-250"
                            x-transition:leave-start="opacity-100 scale-100"
                            x-transition:leave-end="opacity-0 scale-95"
                            class="border-green-500 bg-green-400 {{ 'border-red-500 bg-red-400' if category == 'danger' }} border-2 text-white px-4 py-2 rounded shadow-lg mb-2">
                                {{ message }}
                            </div>
                        {% endfor %}
                </div>
            {% endif %}
        {% endwith %}
        {% block body %}
        {% block content %}{% endblock %}
        {% endblock %}
    </div>
    {% block footer %}
    <footer class="bg-[#41453C] shadow-md w-full py-4 mt-4">
        <div class="container mx-auto text-center text-white">
            Hak cipta &copy; 2023 E-Manja. Seluruh hak cipta dilindungi undang-undang.
        </div>
    </footer>
    {% endblock %}
</body>
<script>
  document.addEventListener("DOMContentLoaded", function () {
    setTimeout(function () {
      let alerts = document.querySelectorAll(".alert");
      alerts.forEach(function (alert) {
        alert.classList.add("opacity-0"); // Tambahkan efek transparan
        setTimeout(function () {
          alert.remove();
        }, 500); // Hapus elemen setelah efek
      });
    }, 3000); // Menghilang setelah 3 detik
  });
</script>
</html>