<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Search Catalog</title>
    <link rel="stylesheet" href="{{ url_for('static', filename='styles.css') }}">
</head>
<body>
    <header>
        <h1>Product Catalog</h1>
    </header>
    <main>
        <form method="GET" action="{{ url_for('search_katalog') }}">
            <input type="text" name="query" placeholder="Search products..." value="{{ request.args.get('query', '') }}">
            <button type="submit">Search</button>
        </form>

        {% if products %}
            <h2>Search Results</h2>
            <ul>
                {% for product in products %}
                    <li>
                        <h3>{{ product.name }}</h3>
                        <p>{{ product.description }}</p>
                        <p>Price: ${{ product.price }}</p>
                    </li>
                {% endfor %}
            </ul>
        {% elif request.args.get('query') %}
            <p>No products found for "{{ request.args.get('query') }}".</p>
        {% endif %}
    </main>
</body>
</html>