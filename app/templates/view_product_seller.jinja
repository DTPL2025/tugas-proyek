<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Seller Products</title>
    <link rel="stylesheet" href="{{ url_for('static', filename='styles.css') }}">
</head>
<body>
    <h1>Products Sold by {{username}}</h1>
    <div class="product-list">
        {% for product in products %}
            <div class="product-item">
                <h2>{{ product.name }}</h2>
                <img src="{{ url_for('static', filename='product_images/' + product.image_file) }}" alt="{{ product.name }}" style="width: 50px; height: 50px;">    
                <p>{{ product.description }}</p>
                <p>Price: ${{ product.price }}</p>
                <p>Stock: {{ product.stock }}</p>
                <a href="{{ url_for('edit_product', product_id=product.id) }}" class="btn btn-edit">Edit</a>
                <a href="{{ url_for('delete_product', product_id=product.id) }}" class="btn btn-delete" 
                onclick="return confirm('Are you sure you want to delete this product?');">Delete</a>
            </div>
        {% else %}
            <p>No products found for this seller.</p>
        {% endfor %}
    </div>
</body>
</html>

