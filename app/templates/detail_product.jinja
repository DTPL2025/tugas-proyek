{% extends "base.jinja" %}
{% block title %}Product Details{% endblock %}

{% block body %}
<body class="bg-gray-100 flex items-center justify-center min-h-full">
    <div class="bg-white p-8 rounded-lg shadow-lg w-full max-w-xl relative overflow-auto">
        
        <!-- Tombol Kembali ke List Produk -->
        <a href="{{ url_for('etalase_product') }}" class="absolute top-4 right-4 bg-gray-500 text-white px-4 py-2 rounded hover:bg-gray-600">Kembali</a>

        <h1 class="text-2xl font-bold mb-6 text-center">{{ product.name }}</h1>

        <!-- Gambar Produk -->
        <div class="flex justify-center mb-6">
            <img src="{{ url_for('static', filename='product_images/' + product.image_file) }}" 
                 alt="{{ product.name }}" 
                 class="border rounded w-60 h-60 object-cover shadow-md">
        </div>

        <!-- Detail Produk -->
        <div class="space-y-4 mb-6">
            <p><span class="font-semibold">Deskripsi:</span> {{ product.description if product.description else 'Tidak ada deskripsi.' }}</p> 
            <p><span class="font-semibold">Harga:</span> Rp. {{ product.price }}</p>
            <p><span class="font-semibold">Stok:</span> {{ product.stock }} Unit</p>
            <p><span class="font-semibold">Berat:</span> {{ product.weight }} gram</p>
            <p><span class="font-semibold">Penjual:</span> {{ product.seller.name if product.seller.name else 'Tidak diketahui' }}</p>
        </div>

        <!-- Tombol Tambah ke Keranjang dan Beli Langsung -->
        <div class="space-y-3">
            <!-- Form Tambah ke Keranjang -->
            {# <form action="{{ url_for('add_to_cart', product_id=product.id) }}" method="POST" class="w-full"> #}
                <button type="submit" 
                        class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600 text-sm w-full text-center">
                    Tambah ke Keranjang
                </button>
            {# </form> #}

            <!-- Form Beli Langsung -->
            {# <form action="{{ url_for('buy_now', product_id=product.id) }}" method="POST" class="w-full"> #}
                <button type="submit" 
                        class="bg-green-500 text-white px-4 py-2 rounded hover:bg-red-600 text-sm w-full text-center">
                    Beli Langsung
                </button>
            {# </form> #}
        </div>

    </div>
</body>
{% endblock %}
