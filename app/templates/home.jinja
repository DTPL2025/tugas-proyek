{% extends "base.jinja" %}
{% block title %}Home Page{% endblock %}
{% block content %}
<nav>
    {% if username %}
        <h1>Welcome, {{ username }}!</h1>
        <a href="{{ url_for('logout') }}">Logout</a>
    {% else %}
        <a href="{{ url_for('register') }}">Register</a>
        <a href="{{ url_for('login') }}">Login</a>
    {% endif %}
</nav>
{% endblock %}
